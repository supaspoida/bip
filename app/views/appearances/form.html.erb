<% form_for(@appearance) do |f| %>
  <%= f.error_messages %>

  <p>
		<%= f.label :band_id, "Band" %><br />
    <%= collection_select("appearance", "band_id", Band.find(:all), "id", "name", :include_blank => true) %>
  </p>
  <p>
		<%= f.label :show_id %><br />
    <%= f.text_field :show_id %>
  </p>
  <p>
		<%= f.label :headliner %><br />
    <%= f.check_box :headliner %>
  </p>
  <p>
		<%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>