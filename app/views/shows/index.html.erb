<h1>Listing shows</h1>

<table>
  <tr>
    <th>Venue</th>
    <th>Date</th>
    <th>Doors</th>
    <th>Notes</th>
    <th>Announced at</th>
  </tr>

<% for show in @shows %>
  <tr>
    <td><%=h show.venue.name%></td>
    <td><%=h show.date %></td>
    <td><%=h show.doors %></td>
    <td><%=h show.notes %></td>
    <td><%=h show.announced_at %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
    <td><%= link_to 'Attending', show_attendances_path(show), :method => :post %></td>
  </tr>
<% end %>
</table>

