<h1>New show</h1>

<% form_for(@show) do |f| %>
  <%= f.error_messages %>

  <p>
		<%= f.label :venue_id %><br />
    <%= collection_select("show", "venue_id", Venue.find(:all), "id", "name", :include_blank => true) %>
  </p>
  <p>
		<%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </p>
  <p>
		<%= f.label :doors %><br />
    <%= f.datetime_select :doors %>
  </p>
  <p>
		<%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </p>
  <p>
		<%= f.label :announced_at %><br />
    <%= f.datetime_select :announced_at %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', shows_path %>